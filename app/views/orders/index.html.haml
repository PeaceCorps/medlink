%h2 Request History
%table#orders.table.table-bordered.js-striped.table-hover
  %thead
    %tr
      %th Supply
      %th Requested
      %th Response
  %tbody
    - @orders.each do |order|
      %tr{ "class" => "order c#{order.country_id}", "data-date" => order.created_at.in_time_zone(order.user.time_zone).strftime("%Y%m%d") }
        %td= order.supply
        %td
          %span= order.created_at.in_time_zone(order.user.time_zone).strftime '%-m/%-d/%y'
          %small.cell--secondary= order.created_at.in_time_zone(order.user.time_zone).strftime '%H:%M'
        %td= order.responded_at.in_time_zone(order.user.time_zone).strftime '%-m/%-d/%y' if order.responded_at

